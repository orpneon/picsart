{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "lib": ["es6", "dom"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "./src/types/global"
    ],
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "module": "esnext",
    "esModuleInterop": true,
    /* Advanced Options */
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* Route alias */
    "baseUrl": "."
  },
  "includes": [
    "src"
  ],
  "exclude": [
    "./node_modules"
  ]
}
